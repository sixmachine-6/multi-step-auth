doctype html
html
    head
        meta(charset='UTF-8')
        meta(name='viewport' content='width=device-width, initial-scale=1.0')
        link(href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet')
        link(rel="stylesheet" href="index.css")
body
    form.otpform.form--container.form
        if !user 
            div
                h1.heading Please sign up to get the otp to your email

        else
            div
                h2 Verify OTP
                h2.heading(for='otp') enter the otp sent to 
                    span=`${user.email} to sign up successfully`
                input.inputBox.otp#otp(type='number', placeholder='OTP', required,maxlength='6' minlength='6')
                button signup
    script(src='bundle.js')